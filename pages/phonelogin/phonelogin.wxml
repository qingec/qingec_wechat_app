<van-cell-group>
  <van-field
    value="{{ phone }}"
    label="手机号"
    placeholder="请输入手机号"
    error-message="手机号格式错误"
    border="{{ true }}"
  />

<van-field
    value="{{ code }}"
    center
    clearable
    label="图片验证码"
    placeholder="请输入图片验证码"
    border="{{ true }}"
    use-button-slot
  >

  </van-field>

<van-field
    value="{{ sms }}"
    center
    clearable
    label="短信验证码"
    placeholder="请输入短信验证码"
    border="{{ false }}"
    use-button-slot
  >
    <van-button slot="button" size="mini" type="info">发送验证码</van-button>
  </van-field>
</van-cell-group>

<view class='login_btn'>
<van-button type="info" bind:click="to_login" custom-class="div_body_button_login" size="normal">登录
</van-button>
</view>